{
  "appenders":[
    {
      "type":"file",
      "filename": "./logs/info.log",
      "maxLogSize": 20480,
      "backups": 3,
      "category": "info"
    },
    {
      "type":"file",
      "filename":"./logs/debug.log",
      "maxLogSize": 20480,
      "backups": 3,
      "category": "debug"
    },
    {
      "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "./logs/errors.log"
          }
    }
  ]

}